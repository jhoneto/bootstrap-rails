<ul class="nav nav-tabs"> 
	<li><%%= link_to "#{t("bootstrap-rails.list", :default => "List")}", <%= controller_routing_path %>_path  %></li> 
	<li><%%= link_to "#{t("bootstrap-rails.new", :default => "New")}", new_<%= singular_controller_routing_path %>_path %></li>  
	<li class="active"><%%= link_to "#{t("bootstrap-rails.show", :default => "Show")}", <%= singular_controller_routing_path %>_path %></li>
</ul>    

<% columns.each do |column| %>
    <p>
      <b><%%= t("activerecord.attributes.<%= singular_controller_routing_path %>.<%= column.name %>", :default =>"<%= column.name.humanize %>") %>:</b>
      <%%= @<%= resource_name %>.<%= column.name %> %>
    </p>
<%- end -%>                  

<div class="actions">
	<%%= link_to t("bootstrap-rails.edit", :default=> "Edit"), edit_<%= singular_controller_routing_path %>_path(@<%= resource_name %>), :class => "btn large primary" %>
    <%%= link_to t("bootstrap-rails.delete", :default => "Delete"), <%= singular_controller_routing_path %>_path(@<%= resource_name %>), :method => "delete", :class => "btn large", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
</div>      
    
